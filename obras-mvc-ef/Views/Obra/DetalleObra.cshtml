@model Obras

<div class="row row-cols-1 row-cols-md-2">
    <div class="col">
        <img src="@Model.UrlImagen" alt="Alternate Text" height="300" class="img-fluid" />
    </div>
    <div class="col">
        <h3>@Model.Titulo</h3>
        <p>Estilo: @Model.Estilo</p>
        <p>
            Artista: @Model.Artista.Nombre
            País: @Model.Artista.Pais
        </p>
        <a asp-controller="Exposicion" asp-action="Details" asp-route-id="@ViewBag.idExpo" class="btn btn-warning m-1"> Volver a la expo</a>
    </div>
    
</div>