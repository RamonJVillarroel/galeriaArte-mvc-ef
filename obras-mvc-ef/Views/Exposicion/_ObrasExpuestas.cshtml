@model Exposicion


<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.ObrasExpuestas)
    {
        <div class="col">
            <div class="card" style="height: 400px">
                <img src="@item.UrlImagen" class="card-img-top img-fluid h-50 object-fit-cover" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Titulo</h5>
                    <p>Estilo: @item.Estilo</p>
    
                    <a asp-controller="Obra" asp-action="DetalleObra" asp-route-id="@item.Id" asp-route-idExpo="@Model.Id">Ver Detalle</a>
                </div>
            </div>
        </div>
    }
</div>